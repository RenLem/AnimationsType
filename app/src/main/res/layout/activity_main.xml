<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="omy.boston.animationstype.MainActivity">

    <Button
        android:id="@+id/btn_StartAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pokreni mi animacije..." />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_StartAnimation"
        android:layout_toEndOf="@+id/imageView"
        android:layoutAnimation="@anim/animation_layout"
        android:persistentDrawingCache="animation|scrolling" />

</RelativeLayout>
